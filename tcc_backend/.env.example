# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_VERSION=v1
BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tcc_database
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Email Configuration (for future implementation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@tccapp.com

# SMS Configuration (for future implementation)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# WebSocket
WS_PORT=3001
WS_PATH=/socket.io

# Security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30
PASSWORD_MIN_LENGTH=8
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Transaction Limits (in SLL - Sierra Leonean Leone)
MIN_DEPOSIT_AMOUNT=1000
MAX_DEPOSIT_AMOUNT=10000000
MIN_WITHDRAWAL_AMOUNT=1000
MAX_WITHDRAWAL_AMOUNT=5000000
MIN_TRANSFER_AMOUNT=100
MAX_TRANSFER_AMOUNT=2000000

# Fees (percentage)
DEPOSIT_FEE_PERCENT=0
WITHDRAWAL_FEE_PERCENT=2
TRANSFER_FEE_PERCENT=1

# Agent Commission
AGENT_BASE_COMMISSION_RATE=0.5

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=sll

# External Market Data APIs
METAL_PRICE_API_KEY=your-metal-price-api-key-here
METAL_PRICE_API_URL=https://api.metalpriceapi.com/v1
CURRENCY_API_KEY=your-currency-api-key-here
CURRENCY_API_URL=https://api.currencyapi.com/v3

# Cache Configuration
METAL_PRICE_CACHE_TTL=300
CURRENCY_RATE_CACHE_TTL=300
