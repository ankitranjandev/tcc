# ===========================================
# TCC Backend - Production Environment
# ===========================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1
BASE_URL=https://api.yourdomain.com

# Database Configuration (AWS RDS)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=tcc_database
DB_USER=postgres
DB_PASSWORD=your-strong-password-here
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20

# JWT Configuration (Use strong random strings - min 32 chars)
JWT_SECRET=generate-a-strong-random-string-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=generate-another-strong-random-string-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload (Consider S3 for production)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=usd

# External APIs
METAL_PRICE_API_KEY=your-metal-price-api-key
METAL_PRICE_API_URL=https://api.metalpriceapi.com/v1
METAL_PRICE_CACHE_TTL=300

CURRENCY_API_KEY=your-currency-api-key
CURRENCY_API_URL=https://api.currencyapi.com/v3
CURRENCY_RATE_CACHE_TTL=300

# CORS (Your production domains)
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30
